@model Web_DSM.Models.ClienteViewModel
@using Práctica3GenNHibernate.EN.Práctica3;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Perfil de @Html.DisplayFor(model => model.NombreUsuario)</h2>
<hr />
<h4>Tus datos</h4>
<div class="container">
    <div class="row">
        <div class="col-lg-3 col-xs-4">
            <strong>@Html.DisplayNameFor(model => model.Email)</strong>
        </div>
        <div class="col-lg-3 col-xs-4">
            @Html.DisplayFor(model => model.Email)
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3 col-xs-4">
            <strong>@Html.DisplayNameFor(model => model.Nombre)</strong>
        </div>
        <div class="col-lg-3 col-xs-4">
            @Html.DisplayFor(model => model.Nombre)
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3 col-xs-4">
            <strong>@Html.DisplayNameFor(model => model.Apellidos)</strong>
        </div>
        <div class="col-lg-3 col-xs-4">
            @Html.DisplayFor(model => model.Apellidos)
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3 col-xs-4">
            <strong>@Html.DisplayNameFor(model => model.Telefono)</strong>
        </div>
        <div class="col-lg-3 col-xs-4">
            @Html.DisplayFor(model => model.Telefono)
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3 col-xs-4">
            <strong>@Html.DisplayNameFor(model => model.Genero)</strong>
        </div>
        <div class="col-lg-3 col-xs-4">
            @Html.DisplayFor(model => model.Genero)
        </div>
    </div>
</div>
<p class="badge text-wrap fs-6 puntos mt-2">Puntos: @Html.DisplayFor(model => model.Puntos)</p>
<hr />

<div>
    @Html.ActionLink("Editar datos", "Edit", new { email = Model.Email }, new { @class = "btn btn-block text-center my-3" })
    @Html.ActionLink("Cambiar la contraseña", "ChangePassword", "Manage", routeValues: new { email = Model.Email }, htmlAttributes: new { @class = "btn btn-block text-center my-3 ms-4" })
</div>




