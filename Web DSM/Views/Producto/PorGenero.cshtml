@model IEnumerable<Web_DSM.Models.ProductoViewModel>
@using Práctica3GenNHibernate.EN.Práctica3;
@using Práctica3GenNHibernate.CEN.Práctica3;

@{
    ViewBag.Title = "PorGenero";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid index-container">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-12 col-sm-12 col-md-12 col-lg-6 col-xl-4 col-xxl-4">
                <img src="@Html.DisplayFor(modelItem => item.Imagen)" height="350" width="350" />
                <p class="fs-4 fw-bold d-inline-block">@Html.DisplayFor(modelItem => item.Nombre)</p>
                <p class="d-inline-block m-3">
                    @if (item.ValoracionMedia != 0)
                    {
                        for (var i = 0; i < item.ValoracionMedia; i++)
                        {
                            <span>&#9733;</span>
                        }
                        for (var i = 0; i < (5 - item.ValoracionMedia); i++)
                        {
                            <span>&#9734;</span>
                        }
                    }
                    else
                    {
                        <span>&#9733;</span>
                        <span>&#9734;</span>
                        <span>&#9734;</span>
                        <span>&#9734;</span>
                        <span>&#9734;</span>
                    }
                </p>
                <div>
                    <p class="d-inline-block">@Html.DisplayFor(modelItem => item.Precio)</p>
                    <p class="badge text-wrap fs-7 d-inline-block m-2 genero">@Html.DisplayFor(modelItem => item.Genero)</p>
                </div>
                @if (item.Stock == 0)
                {
                    <p class="text-danger fw-bold">Sin stock</p>
                }
                else
                {
                    <p>Quedan @Html.DisplayFor(modelItem => item.Stock) unidades</p>
                }
                @if (Session["usuario"] != null)
                {

                    bool encontrado = false;
                    ProductoCEN prodCEN = new ProductoCEN();
                    IList<ProductoEN> listProdEn = prodCEN.DameListaFavoritosCliente(((ClienteEN)Session["usuario"]).Email);
                    foreach (ProductoEN prod in listProdEn)
                    {
                        if (prod.Id == item.Id)
                        {
                            encontrado = true;
                        }
                    }
                    if (encontrado)
                    {
                        <a class="me-3" href="@Url.Action("QuitarDeFavoritos", "Producto", routeValues: new { idProducto = item.Id })">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-heart-fill" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M8 1.314C12.438-3.248 23.534 4.735 8 15-7.534 4.736 3.562-3.248 8 1.314z" />
                            </svg>
                        </a>
                    }
                    else
                    {
                        <a class="me-3" href="@Url.Action("AnyadirAFavoritos", "Producto", routeValues: new { idProducto = item.Id })">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-heart" viewBox="0 0 16 16">
                                <path d="m8 2.748-.717-.737C5.6.281 2.514.878 1.4 3.053c-.523 1.023-.641 2.5.314 4.385.92 1.815 2.834 3.989 6.286 6.357 3.452-2.368 5.365-4.542 6.286-6.357.955-1.886.838-3.362.314-4.385C13.486.878 10.4.28 8.717 2.01L8 2.748zM8 15C-7.333 4.868 3.279-3.04 7.824 1.143c.06.055.119.112.176.171a3.12 3.12 0 0 1 .176-.17C12.72-3.042 23.333 4.867 8 15z" />
                            </svg>
                        </a>
                    }

                    if (((ClienteEN)Session["usuario"]).GeneroFav == item.Genero)
                    {
                        <p class="badge text-wrap fs-7 recomendado me-3">Recomendado para tí</p>
                    }

                }
                @Html.ActionLink("Detalles", "Details", new { id = item.Id })
            </div>
        }
    </div>
</div>
<p>
    @Html.ActionLink("Volver atrás", "Index")
</p>
